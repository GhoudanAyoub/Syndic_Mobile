<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dce1e6"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            style="@style/CalculatorButtonNewWhite"
            android:layout_marginEnd="4dp"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/CalculatorButtonNewWhite"
            android:layout_marginEnd="4dp"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/CalculatorButtonNewWhite"
            android:layout_marginEnd="4dp"
            android:text="9" />

        <ImageButton
            android:id="@+id/backspace"
            style="@style/CalculatorButtonNewWhite"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            style="@style/CalculatorButtonNewWhite"
            android:layout_marginEnd="4dp"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/CalculatorButtonNewWhite"
            android:layout_marginEnd="4dp"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/CalculatorButtonNewWhite"
            android:layout_marginEnd="4dp"
            android:text="6" />

        <ImageButton
            android:id="@+id/divide"
            style="@style/CalculatorButtonNewWhite"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/ic_divide" />

        <ImageButton
            android:id="@+id/multiply"
            style="@style/CalculatorButtonNewWhite"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_multiply" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    style="@style/CalculatorButtonNewWhite"
                    android:layout_marginEnd="4dp"
                    android:text="1" />

                <Button
                    android:id="@+id/button2"
                    style="@style/CalculatorButtonNewWhite"
                    android:layout_marginEnd="4dp"
                    android:text="2" />

                <Button
                    android:id="@+id/button3"
                    style="@style/CalculatorButtonNewWhite"
                    android:layout_marginEnd="4dp"
                    android:text="3" />

                <ImageButton
                    android:id="@+id/subtract"
                    style="@style/CalculatorButtonNewWhite"
                    android:layout_height="match_parent"

                    app:srcCompat="@drawable/ic_subtract" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button0"
                    style="@style/CalculatorButtonNewWhite"
                    android:layout_marginEnd="4dp"
                    android:text="0" />

                <Button
                    android:id="@+id/buttonDot"
                    style="@style/CalculatorButtonNewWhite"
                    android:layout_marginEnd="4dp"
                    android:text="." />

                <Button
                    android:id="@+id/buttonClear"
                    style="@style/CalculatorButtonNewWhite"
                    android:layout_marginEnd="4dp"
                    android:text="C" />


                <ImageButton
                    android:id="@+id/equals"
                    style="@style/CalculatorButtonNewWhite"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_equals" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="4dp">

            <ImageButton
                android:id="@+id/add"
                style="@style/CalculatorButtonNewGreen"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_plus" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
